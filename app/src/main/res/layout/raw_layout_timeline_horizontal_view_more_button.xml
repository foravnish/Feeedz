<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_timeline_horizontal_companies_list_view_more"
    android:layout_width="82dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_20dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:background="@mipmap/background_timeline_horizontal_layout_view_more_button"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_timeline_horizontal_layout_view_more_button" />

        <com.socialinfotech.feeedj.AppUtils.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginRight="@dimen/margin_10dp"
            android:gravity="center_horizontal"
            android:textColor="#5e5e5e"
            android:textSize="12.5dp"
            android:text="@string/TimelineHorizontalViewMoreButtonText"
            app:customFont="@string/GEThameenDemibold" />
    </LinearLayout>

</RelativeLayout>